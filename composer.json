{
    "name": "pfinal/asyncio-http",
    "description": "A Guzzle-compatible async HTTP client based on pfinal-asyncio with full PSR-7/PSR-18 support",
    "type": "library",
    "keywords": ["http", "client", "guzzle", "async", "asyncio", "psr-7", "psr-18", "fiber"],
    "license": "MIT",
    "authors": [
        {
            "name": "PFinal",
            "email": "pfinal@pfinal.cn"
        }
    ],
    "require": {
        "php": ">=8.1",
        "pfinalclub/asyncio": "^2.0",
        "psr/http-message": "^1.0|^2.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "PFinal\\AsyncioHttp\\": "src/"
        },
        "files": [
            "src/functions.php",
            "src/Psr7/functions.php",
            "src/Promise/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PFinal\\AsyncioHttp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=8",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

