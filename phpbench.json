{
    "$schema": "./vendor/phpbench/phpbench/phpbench.schema.json",
    "runner.bootstrap": "vendor/autoload.php",
    "runner.path": "benchmarks",
    "runner.time_unit": "milliseconds",
    "runner.iterations": 5,
    "runner.revs": 10,
    "runner.retry_threshold": 3,
    "report.generators": {
        "default": {
            "extends": "aggregate",
            "cols": ["benchmark", "subject", "set", "revs", "its", "mem_peak", "mode", "rstdev"],
            "sort": {"mean": "asc"}
        },
        "performance": {
            "extends": "aggregate",
            "cols": ["benchmark", "subject", "mode", "best", "worst", "mean", "stdev", "rstdev", "mem_peak"],
            "sort": {"mean": "asc"}
        }
    }
}

